{
  "name": "knowledge-canvas",
  "version": "0.3.3",
  "author": "Rob Royce <robertris2@gmail.com> (https://robroyce.dev)",
  "description": "Knowledge Canvas is an application for students, researchers, and life-long learners who need help managing their digital ecosystem through use of search, knowledge graphs, and more.",
  "private": true,
  "license": "Apache-2.0",
  "postinstall": "electron-builder install-app-deps",
  "workspaces": [
    "src/kc_electron",
    "src/kc_angular"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RobRoyce/knowledge-canvas.git"
  },
  "main": "src/kc_electron/dist/electron.js",
  "scripts": {
    "build": "yarn workspaces run build",
    "build-dev": "yarn workspaces run build-dev",
    "clean": "rm -rf ./dist && yarn workspaces run clean",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --publish never",
    "dist-all": "electron-builder -mwl --publish never",
    "publish": "electron-builder --publish always",
    "publish-all": "electron-builder -mwl --publish always",
    "purge": "rm -rf node_modules && yarn workspaces run purge",
    "release": "standard-version",
    "start": "electron .",
    "start-debug": "electron . --inspect=5858",
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch-main": "cd src/kc_angular && yarn run watch-main",
    "watch-main-dev": "cd src/kc_angular && yarn run watch-main-dev",
    "watch-electron": "cd src/kc_electron && yarn run watch-electron",
    "watch-electron-dev": "cd src/kc_electron && yarn run watch-electron-dev"
  },
  "dependencies": {},
  "devDependencies": {
    "standard-version": "^9.3.1"
  },
  "build": {
    "appId": "com.knowledgecanvas.app",
    "productName": "Knowledge Canvas",
    "directories": {
      "buildResources": "Resources"
    },
    "files": [
      "src/kc_angular/dist/**/*",
      "src/kc_electron/dist/**/*",
      "Resources/**/*"
    ],
    "extraResources": [
      {
        "from": "Resources/app.env",
        "to": "app.env"
      }
    ],
    "publish": {
      "provider": "s3",
      "bucket": "knowledge-canvas"
    },
    "mac": {
      "category": "public.app-category.education",
      "target": [
        "dmg",
        "zip"
      ],
      "darkModeSupport": true
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    },
    "win": {
      "target": [
        "nsis"
      ]
    }
  }
}
