{
  "name": "knowledge-canvas",
  "version": "0.1.0",
  "description": "",
  "private": true,
  "workspaces": [
    "src/kc_electron",
    "src/kc_angular"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RobRoyce/knowledge-canvas.git"
  },
  "main": "src/kc_electron/dist/electron.js",
  "scripts": {
    "build": "yarn workspaces run build",
    "build-dev": "yarn workspaces run build-dev",
    "clean": "rm -rf ./dist && yarn workspaces run clean",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "purge": "rm -rf node_modules && yarn workspaces run purge",
    "start": "electron .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch-main": "cd src/kc_angular && yarn run watch-main",
    "watch-main-dev": "cd src/kc_angular && yarn run watch-main-dev",
    "watch-electron": "cd src/kc_electron && yarn run watch-electron",
    "watch-electron-dev": "cd src/kc_electron && yarn run watch-electron-dev"
  },
  "dependencies": {},
  "devDependencies": {},
  "build": {
    "appId": "com.knowledgecanvas.app",
    "productName": "Knowledge Canvas Application",
    "directories": {
      "buildResources": "resources"
    },
    "files": [
      "src/kc_angular/dist/**/*",
      "src/kc_electron/dist/**/*",
      "resources/**/*"
    ],
    "extraResources": [
      {
        "from": "resources/app.env",
        "to": "app.env"
      }
    ],
    "mac": {
      "category": "knowledge.canvas.app"
    },
    "win": {
      "target": [
        "portable"
      ]
    }
  }
}
